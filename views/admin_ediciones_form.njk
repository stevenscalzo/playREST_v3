{% extends "base.njk" %}

{% block titulo %}Adminitrador{% endblock %}

{% block contenido %}
    <h5>Ediciones:</h5> <br>
    <div class="list-group">
        {% for edicion in juego.Ediciones %}
            <div class="list-group-item list-group-item-action list-group-item-secondary">
                <div class="d-flex">
                    <div class="mr-auto p-2">Nombre: {{ edicion.edicion }}</div>
                    <div class="p-2">Año: {{ edicion.anyo }}</div>
                    
                    <form action="/juegos/editar/ediciones/borrar/{{ juego.id }}/{{ edicion.id }}" method="POST">
                        <button type="submit" class="btn btn-dark"><i class="fa fa-trash" aria-hidden="true"></i></button>
                    </form>
                </div>
            </div>        
        {% endfor %}
    </div>
    <h5>Añadir edición:</h5> <br>
    <form action="/juegos/editar/ediciones/{{ juego.id }}" method="POST">
        <div class="form-group">
            <label for="edicion">Nombre</label>
            <input type="text" required class="form-control" id="edicion" name="edicion" placeholder="Nombre">
        </div>
        <div class="form-group">
            <label for="anyo">Año</label>
            <input type="number" required min="2000" max="2023" class="form-control" id="anyo" name="anyo" placeholder="Año">
        </div>
        
        <button type="submit" class="btn btn-dark">Guardar</button>
    </form>
{% endblock %}